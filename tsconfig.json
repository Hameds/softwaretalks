{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["esnext", "dom", "scripthost"],
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "rootDirs": ["src", "stories"]
  }
}
